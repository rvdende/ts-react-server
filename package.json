{
  "name": "ts-react-server",
  "version": "1.0.2",
  "description": "Quick setup typescript react live reload server",
  "main": "index.js",
  "scripts": {
    "start": "nodemon build/server/main.js",
    "dev": "npm install && npm run buildserver && npm run buildclientdev && npm run watch\"",
    "watch": "concurrently --kill-others \"npm run watchserver\" \"npm run watchclient\" \"npm run start\"",
    "watchserver": "tsc --sourcemap --w --lib es2015 ./src/server/main.ts --outDir ./build",
    "buildserver": "tsc --sourcemap --lib es2015 ./src/server/main.ts --outDir ./build",
    "watchclient": "webpack --env dev -w --mode development --entry ./src/client/client.tsx --output ./public/bundle.js",
    "buildclientdev": "webpack --env dev --mode development --entry ./src/client/client.tsx --output ./public/bundle.js",
    "watchclientprod": "webpack --env prod -w --mode production --entry ./src/client/client.tsx --output ./public/bundle.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "typescript",
    "live",
    "reload",
    "simple",
    "minimal",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rvdende/ts-react-server.git"
  },
  "author": "Rouan van der Ende",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rvdende/ts-react-server/issues"
  },
  "homepage": "https://github.com/rvdende/ts-react-server#readme",
  "dependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.7",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.2",
    "@types/styled-components": "^4.4.0",
    "@types/ws": "^6.0.3",
    "express": "^4.17.1",
    "extra-watch-webpack-plugin": "^1.0.3",
    "isomorphic-ws": "^4.0.1",
    "nodemon": "^1.19.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-spring": "^8.0.27",
    "styled-components": "^4.4.1",
    "ts-loader": "^6.2.1",
    "ts-react-grid": "^1.0.3",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "ws": "^7.2.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.0"
  }
}
